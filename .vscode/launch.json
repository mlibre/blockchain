{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to Chrome",
			"port": 9222,
			"request": "attach",
			"type": "pwa-chrome",
			"webRoot": "${workspaceFolder}"
		},
	  {
		 "type": "chrome",
		 "request": "launch",
		 "runtimeExecutable": "/usr/bin/chromium",
		 "name": "Launch Chrome against localhost",
		 "url": "http://localhost:3000",
		 "runtimeArgs": [
			"--user-data-dir"
		 ],
		 "sourceMaps": true,
		 "webRoot": "${workspaceFolder}"
	  }
	]
 }